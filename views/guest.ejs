<%- include('partials/header') -%>
<div class="container">

    <!--Profile Picture-->
  <%if(profile == 'undefined'){%>
    <div class="row col-12 justify-content-center">
    
      <img class="profile-pic" src="imgs/Default_pfp.svg.png" alt="profile pic">
   
  </div>
  <%} else {%>
  <div class="row col-12 justify-content-center">
    
      <img class="profile-pic" src="<%= profile[0].profilePic%>" alt="profile pic">
   
  </div>

<%}%>

    <div class=" profile-input-ct ms-1 col-8"> <!--this column takes up the first half of space (contains the forms) allows them to be side by side-->
        <div class="user-info">
            <p><strong>User Name:</strong> <%= user.userName %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <a href="/logout" class="col-3 btn btn-primary">Logout</a>
        </div>
        <div class="mt-5">  <!--mt is margin top-->
         
        </div>
    </div>
   
    <div class="col-10"> <!--this column takes up the second half of space (contains all the photos)-->
      <ul class="row list-unstyled">
      <% for(var i=0; i<posts.length; i++) {%>
        <li class="col-6 justify-content-between mt-5 pbox-pics">
          <a href="/post/<%= posts[i]._id%>">
            <img class="img-fluid" src="<%= posts[i].image%>">
          </a>
        </li>
      <% } %>
      </ul>
      <div class="row justify-content-center mt-5 mb-4">
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div>  
    </div>  
  
</div>
 

<%- include('partials/footer') -%>