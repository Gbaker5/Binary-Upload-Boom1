<%- include('partials/header') -%>
<div class="container">
    <div class="row  mt-5">
        <!--Navbar-->
      <div class="navbar-container col-2"> <!--sidebar nav-->
       <div class="nav-container">
         <nav class="nav flex-column">
           <a class="nav-link nav-pills" aria-current="page" href="/profile"><img class="nav-pic" src="<%= profile[0].profilePic%>" alt=""></a>
           <a class="nav-link nav-pills" href="/profile">HOME</a>
           <a class="nav-link nav-pills" href="/feed">FEED</a>
           <a class="nav-link nav-pills"href="/friends">FRIENDS</a>
         </nav>
       </div>
     </div>

     <div class="fList profile-input-ct ms-1 col-8">
        <h2>Friends List</h2>
        <ul class="row list-unstyled">
          <% for(var i=0; i<friends.length; i++) {%>
            <li class="col-6 justify-content-between mt-5 friends-pic-ct">
              <%if(nicknames[i] == ""){%>
                <a href="/guest/<%=friends[i].friend%>">
                
                  <p class="namesp"><%=names[i]%></p>
                  
                  <img class="friends-pic img-fluid" src="<%=profilepics[i]%>">
                </a>
              <%}else{%>
                <a href="/guest/<%=friends[i].friend%>">
                
                  <p class="namesp"><%=nicknames[i]%></p>
                  
                  <img class="friends-pic img-fluid" src="<%=profilepics[i]%>">
                </a>
              <%}%>
              
            </li>
          <% } %>
          </ul>
     </div>

     




</div>
 

<%- include('partials/footer') -%>