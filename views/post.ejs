<%- include('partials/header') -%>
<div class="container">

<div class="row  mt-5">
     <!--Navbar-->
   <div class="navbar-container col-2"> <!--sidebar nav-->
    <div class="nav-container">
      <nav class="nav flex-column">
        <a class="nav-link nav-pills" aria-current="page" href="/profileEdit"><img class="nav-pic" src="<%= profile[0].profilePic%>" alt=""><i class="edit-user fa-solid fa-user-pen"></i></a>
        <a class="nav-link nav-pills" href="/profile">HOME</a>
        <a class="nav-link nav-pills" href="/feed">FEED</a>
        <a class="nav-link nav-pills"href="">FRIENDS</a>
      </nav>
    </div>
  </div>

    <div class="col-10">
      <h2><%= post.title %></h2> <!--Title-->
      
      <img class="img-fluid col-10" src="<%= post.image%>" /> <!--Image-->
      
      <div class="col-10 mt-5 captions"><!--Caption-->
        <p><%= post.caption %></p>
      </div>
      
      <div class="row justify-content-between"><!--Like Button Likes display and delete button-->
        <form 
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form> <!--Likes Button-->

        <h3 class="col-3">Likes: <%= post.likes %></h3><!--Likes display-->
        <%if(post.user == user.id){ %> 

        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form> <!--Delete Buton-->
        <%}%>
      </div>
    </div>

      <div class="col-11 comments-ct mt-1 "><!--comments-->
      
        <div class="col-6 mt-2 comments-ct2">
            
          <ul class="row col-10 list-group">
            <% for(var i=0; i<comments.length; i++) {%>
                
                <li class="col-6 comments justify-content-around mt-5">
                  
                  <a href="/profile">
                    
                    <img class="img-fluid" src="<%=posterImage[i]%>"> <!--small profile image on left with link to that person profile then comment to the right--> 
                  </a>
                  <span><%= comments[i].comment%></span><!--comments to the right of picture-->
                  
                  
                </li>
              <% } %>
          </ul>

        </div>

            <form class="mb-2" action="/comment/createComment/<%=post._id%>" method="POST">
             <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <input type="text" class="form-control" id="comment" name="comment">
              </div>
            <button type="submit" class="btn btn-primary">Post</button>
            </form>
      </div>
      </div>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>

  </div>


<%- include('partials/footer') -%>
