<%- include('partials/header') -%>

<div class="row col-12 justify-content-center">
 
        <img class="profile-pic" src="<%= profile[0].profilePic%>">

</div>

<div class="row mt-5 mb-3 ms-2"> <!--this is the row for the form and the photos -->
     
    <!--Navbar-->
   <div class="navbar-container col-2"> <!--sidebar nav-->
    <div class="nav-container">
      <nav class="nav flex-column">
        <a class="nav-link profile-active nav-pills" aria-current="page" href="/profile"><img class="nav-pic" src="<%= profile[0].profilePic%>" alt="profileSmall"></a>
        <a class="nav-link nav-pills" href="/profile">HOME</a>
        <a class="nav-link nav-pills" href="/feed">FEED</a>
        <a class="nav-link nav-pills"href="/friends">FRIENDS</a>
      </nav>
    </div>
  </div>

  <div class=" profile-input-ct ms-1 col-8"> <!--this column takes up the first half of space (contains the forms) allows them to be side by side-->
    <div class="user-info col-6 mt-2">
      <h2>Account Info</h2>
        <p><strong>User Name:</strong> <%= user.userName %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <a href="/logout" class="col-3 btn btn-primary">Logout</a>
    </div>
    <div class="mt-5">  <!--mt is margin top-->
      <h2>Change Profile Pic</h2>
      <!--this is the post form-->
      <form action="/profileEdit"  enctype="multipart/form-data" method="POST">
       
        <div class="mb-3">
          <label for="imgUpload" class="form-label">Image</label>
          <input type="file" class="form-control" id="imageUpload" name="file">
        </div>
        <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
      </form>
    </div>
</div>

<div class="profile-input-ct mt-1 col-10">


<h2>Previous Profile Pics</h2>

<div class="propics-ct">
  <ul class="row list-unstyled propics-ul">
    
    <% for(var i=0; i<profile.length; i++) {%>
      <li class="col-2 justify-content-between mt-5 ">
        <img class="img-fluid propics prevpics" src="<%=profile[i].profilePic%>">
        <form 
        action="/ProfileEdit?_method=PUT"
        method="POST">

        <input class="hidden" type="hidden" name="profile" value="<%=profile[i].profilePic%>">
        <button class="updatebutton" type="submit">
          Update Profile
        </button>
        </form>
        
      </li>
    <% } %>
    </ul>
    <!--put an event listener on each image that changes the top profile pic to that image and
          a route for a submit form that updates database and makes that profile the most recently created profile for that user, change the value of createdAt to Date.now-->
</div>
</div>

<div class=" profile-input-ct ms-1 col-8">
  <div>
    <h2>Bio Update</h2>
  </div>
  
  <form action="/bio?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="mb-3">
      <label for="nickname" class="form-label">Nickname</label>
      <input type="text" class="form-control" id="nickname" name="nickname">
    </div>
    <div class="mb-3">
      <label for="age" class="form-label">Age</label>
      <input type="text" class="form-control" id="age" name="age">
    </div>
    <div class="mb-3">
      <label for="sign" class="form-label">Zodiac Sign</label>
      <input type="text" class="form-control" id="sign" name="sign">
    </div>
    <div class="mb-3">
      <label for="favoriteFood" class="form-label">Favorite Food</label>
      <input type="text" class="form-control" id="favoriteFood" name="favoriteFood">
    </div>
    <div class="mb-3">
      <label for="favoriteMovie" class="form-label">Favorite Movie</label>
      <input type="text" class="form-control" id="favoriteMovie" name="favoriteMovie">
    </div>
    <div class="mb-3">
      <label for="favoriteArtist" class="form-label">Favorite Artist</label>
      <input type="text" class="form-control" id="favoriteArtist" name="favoriteArtist">
    </div>
    <div class="mb-3">
      <label for="favoriteSong" class="form-label">Favorite Song</label>
      <input type="text" class="form-control" id="favoriteSong" name="favoriteSong">
    </div>
    <div class="mb-3">
      <label for="cool" class="form-label">Coolest thing about you</label>
      <textarea type="text" class="form-control" id="cool" name="cool"></textarea>
    </div>

    <button type="submit">Update Bio</button>
  </form>
</div>




