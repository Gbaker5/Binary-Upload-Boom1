<%- include('partials/header') -%>
<div class="biosection  ms-8 col-6">
<div class="h2section">
    <h2>Tell us About yourself</h2>
</div>

<form action="/bio?_method=PUT" method="POST">
    <div class="mb-3 bioinputs">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="mb-3 bioinputs">
      <label for="nickname" class="form-label">Nickname</label>
      <input type="text" class="form-control" id="nickname" name="nickname">
    </div>
    <div class="mb-3 bioinputs">
      <label for="age" class="form-label">Age</label>
      <input type="text" class="form-control" id="age" name="age">
    </div>
    <div class="mb-3 bioinputs">
      <label for="sign" class="form-label">Zodiac Sign</label>
      <select class="form-control" id="sign" name="sign" type="text"> 
      <option value="">- Zodiac -</option>
      <option value="Capricorn">Capricorn—December 22-January 19</option>
      <option value="Aquarius">Aquarius—Jan 20-Feb 18</option>
      <option value="Pisces">Pisces—Feb 19-March 20</option>
      <option value="Aries">Aries—March 21-April 19s</option>
      <option value="Taurus">Taurus—April 20-May 20</option>
      <option value="Gemini">Gemini—May 21-June 20</option>
      <option value="Cancer">Cancer—June 21-July 22</option>
      <option value="Leo">Leo—July 23-August 22</option>
      <option value="Virgo">Virgo—August 23-September 22</option>
      <option value="Libra">Libra—September 23-October 22</option>
      <option value="Scorpio">Scorpio—October 23-November 21</option>
      <option value="Saggitarius">Sagittarius—November 22-December 21</option>
      </select>
      
    </div>
    <div class="mb-3 bioinputs">
      <label for="favoriteFood" class="form-label">Favorite Food</label>
      <input type="text" class="form-control" id="favoriteFood" name="favoriteFood">
    </div>
    <div class="mb-3 bioinputs">
      <label for="favoriteMovie" class="form-label">Favorite Movie</label>
      <input type="text" class="form-control" id="favoriteMovie" name="favoriteMovie">
    </div>
    <div class="mb-3 bioinputs">
      <label for="favoriteArtist" class="form-label">Favorite Artist</label>
      <input type="text" class="form-control" id="favoriteArtist" name="favoriteArtist">
    </div>
    <div class="mb-3 bioinputs">
      <label for="favoriteSong" class="form-label">Favorite Song</label>
      <input type="text" class="form-control" id="favoriteSong" name="favoriteSong">
    </div>
    <div class="mb-3 bioinputs">
      <label for="cool" class="form-label">Coolest thing about you</label>
      <textarea type="text" class="form-control" id="cool" name="cool"></textarea>
    </div>

    <button class="biobutton" type="submit">Update Bio</button>
  </form>
</div>
  <%- include('partials/footer') -%>